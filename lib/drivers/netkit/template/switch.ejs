################################################################################
# Script generated by Netkitdriver <%= version %>
################################################################################

echo -e '\e[1;32mConfiguring <%= name %>\e[0m'

echo 0 > /proc/sys/net/ipv4/ip_forward

# Set up network interfaces
<% ifaces.forEach(function(iface) { %>
ifconfig <%= iface %> up
<% }) %>

# Create a new instance for this ethernet bridge.
brctl addbr <%= name %>

# Configure each port attached to the bridge.
<% ifaces.forEach(function(iface) { %>
echo -e '     \e[1;32mAdding <%= iface %> interface\e[0m'
brctl addif <%= name %> <%= iface %>
<% }) %>
